<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_barcode_terminal" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.barcode_terminal</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Barcode Terminal" string="Barcode Terminal" name="barcode_terminal">
                    string="Barcode Terminal">
                    <h2>Barcode Terminal</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="allow_forced_creation"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="allow_forced_creation"/>
                                <div class="text-muted">
                                    Check to allow using templates with mute mode, skipping WYSIWYG-type document forms
                                </div>
                            </div>
                        </div>
                    </div>
                </app>
            </xpath>
        </field>
    </record>

</odoo>
